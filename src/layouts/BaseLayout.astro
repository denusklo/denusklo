---
import '@/styles/global.css';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import SEO from '@/components/SEO.astro';
import StructuredData from '@/components/StructuredData.astro';

const { pageTitle } = Astro.props;

// SEO: Format title as "Page Title | Den Kong" or just "Den Kong" for home
const fullTitle = pageTitle ? `${pageTitle} | Den Kong` : 'Den Kong';
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />

    <!-- Favicon - Emoji-based (lightweight, modern!) -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸª¡</text></svg>" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#000000" />
    <meta name="msapplication-TileColor" content="#000000" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags Component -->
    <SEO title={fullTitle} />

    <!-- Structured Data - helps Google understand your content -->
    <StructuredData type="Person" />

    <!-- Legacy description for backward compatibility -->
    <meta name="description" content="Den Kong's portfolio website - Laravel fullstack developer from Malaysia" />
    <!-- Add Google Fonts if needed -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-gray-900 dark:text-white font-worksans">
    <!-- Global Mouse Glow Effect -->
    <div
      id="global-mouse-glow"
      class="mouse-glow fixed rounded-full blur-3xl opacity-30 pointer-events-none z-50 bg-purple-500 hidden md:block"
      style="width: 400px; height: 400px; transform: translate(-50%, -50%); will-change: left, top;"
    ></div>

    <div class="flex flex-col min-h-screen max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Header />

      <main class="flex-grow py-8">
        <h1 class="text-4xl font-bold mb-8">{pageTitle}</h1>
        <slot />
      </main>

      <Footer />
    </div>
    
    <!-- Global Mouse Glow Script -->
    <script>
      (function() {
        const mouseGlow = document.getElementById('global-mouse-glow');
        if (!mouseGlow) return;

        let mouseX = window.innerWidth / 2;
        let mouseY = window.innerHeight / 2;
        let currentX = mouseX;
        let currentY = mouseY;
        let animationFrameId = null;

        // Track mouse position
        document.addEventListener('mousemove', (e) => {
          mouseX = e.clientX;
          mouseY = e.clientY;
        });

        // Smooth animation loop
        function animate() {
          // Lerp for smooth following
          const ease = 0.1;
          currentX += (mouseX - currentX) * ease;
          currentY += (mouseY - currentY) * ease;

          mouseGlow.style.left = currentX + 'px';
          mouseGlow.style.top = currentY + 'px';

          animationFrameId = requestAnimationFrame(animate);
        }

        // Start animation
        animate();

        // Cleanup on navigation
        document.addEventListener('astro:page-load', () => {
          if (animationFrameId) {
            cancelAnimationFrame(animationFrameId);
          }
          const newGlow = document.getElementById('global-mouse-glow');
          if (newGlow) {
            newGlow.style.left = currentX + 'px';
            newGlow.style.top = currentY + 'px';
          }
        });
      })();
    </script>

    <!-- This script enables view transitions if you decide to use them -->
    <script>
      document.addEventListener('astro:page-load', () => {
        // Any client-side scripts can go here
      });
    </script>
  </body>
</html>